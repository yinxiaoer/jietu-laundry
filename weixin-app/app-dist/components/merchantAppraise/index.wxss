/* components/merchantAppraise/index.wxss */
.container{
  width: 100%;
  height: 100%;
  background: #fff;
}

.content{
  width: 100%;
  height: auto;
}
.content .content_top{
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.content .content_top .top_left{
  font-size: 30rpx;
  color: #333333;
  padding-left: 26rpx;
}
.content .content_top .top_right{
  font-size: 24rpx;
  color: #666666;
  padding-right: 28rpx;
}
.content .tagbox{
  width: 100%;
  height: 52rpx;
  display: flex;
  flex-wrap: wap;
  justify-content: flex-start;
}
.content .tagbox .tag{
  display: inline-block;
  color: #666666;
  font-size: 26rpx;
  padding: 0 14rpx;
  border: 1px solid #ccc;
  border-radius: 4rpx;
  text-align: center;
  min-width: 104rpx;
  margin-left: 20rpx;
  height: 52rpx;
  line-height: 52rpx;
}
.content .tagbox .actived{
  border: 1px solid rgba(242, 68, 57, .2);
  background: rgba(242, 68, 57, .1);
}
.content .appraises{
  width: 100%;
  height: 100%;
  padding: 0 24rpx;
}
 .message{
  width: 95%;
  margin: 0 auto;
  height: 66rpx;
  text-align: center;
  line-height: 66rpx;
  font-size: 22rpx;
  color: #999999;
  border-top: 1px solid #E5E5E5;
}