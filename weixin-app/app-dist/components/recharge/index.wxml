<view class="recharge {{isActive ? 'active' : ''}}" bindtap="change">
    <view wx:if="{{rechargeType === 'default'}}">
      <view class="recharge_item">
        <text class="price">{{dataSet.topUpAmount}}元</text>
        <text class="discounts">{{dataSet.desc}}</text>
      </view>
    </view>
    <view wx:if="{{rechargeType === 'self-define'}}">
      <view class="recharge_item1">
        <text class="user_defined">自定义</text>
      </view>
    </view>
</view>
