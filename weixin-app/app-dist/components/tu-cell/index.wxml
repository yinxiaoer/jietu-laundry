<!--components/tu-userinfo/index.wxml-->
<view class="container {{isBorder?'hasborder':''}} {{isTop?'hasTop':''}}" bindtap="change">
  <text wx:if='{{title}}' class="left_title">{{title}}</text>
  <view class='right'>
    <view wx:if="{{thumb}}" class='thumb'>
      <img-icon src="{{thumb}}"></img-icon>
    </view>
    <view wx:if="{{icon}}" class='icon'>
      <wux-icon type="{{icon}}" color="#c2c2c2" size='24'></wux-icon>
    </view>
    <text wx:if="{{extra}}" class="right_title">{{extra}}</text>
    <view wx:if="{{isLink}}" class='islink'>
      <wux-icon type="icon-right" color="#c2c2c2" size='20'></wux-icon>
    </view>
  </view>
</view>
