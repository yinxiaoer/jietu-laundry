.product {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.product .product-pic {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.product .product-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  align-items: flex-start;
  width: 100%;
  height: 140rpx;
  padding: 0 32rpx 0 18rpx;
}

.product .product-detail .product-detail__name {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 50rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 360rpx;
}

.product .product-detail .product-detail__info {
  color: #333333;
  font-size: 26rpx;
  padding-right: 50rpx;
  line-height: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 360rpx;

}

.product .product-detail .product-detail__value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 32rpx;
  width: 100%;
}

.product .product-detail .product-detail__value .card-handle {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 150rpx;
  flex-shrink: 0;
}

.product .product-detail .product-detail__value .card-handle .reduce {
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}

.product .product-detail .product-detail__value .card-handle .add {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-left: 22rpx;
  flex-shrink: 0;
}

.product .product-detail .product-detail__value .card-handle .number {
  color: #333333;
  font-size: 30rpx;
  font-weight: 500;
  margin-left: 22rpx;
  flex-shrink: 0;
}
